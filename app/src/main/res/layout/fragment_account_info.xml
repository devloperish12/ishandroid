<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AccountInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/margin_100"
                    android:layout_height="@dimen/margin_100"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_30"
                    android:src="@drawable/logo"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:focusable="false"
                        android:id="@+id/tvPName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_45"
                        android:background="@drawable/shape_edittext_border"
                        android:drawablePadding="@dimen/margin_10"
                        android:drawableStart="@drawable/user"
                        android:hint="Demo"
                        android:imeOptions="actionNext"
                        android:paddingStart="@dimen/margin_10"
                        android:singleLine="true"
                        android:textColorHint="@color/colorblack"
                        android:textSize="@dimen/font_15" />

                    <EditText
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_45"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@drawable/shape_edittext_border"
                        android:drawablePadding="@dimen/margin_10"
                        android:drawableStart="@drawable/user"
                        android:hint="Mali"
                        android:imeOptions="actionNext"
                        android:paddingStart="@dimen/margin_10"
                        android:singleLine="true"
                        android:textColorHint="@color/colorblack"
                        android:textSize="@dimen/font_15" />

                    <EditText
                        android:focusable="false"
                        android:id="@+id/etPEmail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_45"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@drawable/shape_edittext_border"
                        android:drawablePadding="@dimen/margin_10"
                        android:drawableStart="@drawable/email"
                        android:hint="demo@gmail.com"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:paddingStart="@dimen/margin_10"
                        android:singleLine="true"
                        android:textColorHint="@color/colorblack"
                        android:textSize="@dimen/font_15" />

                    <EditText
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_45"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@drawable/shape_edittext_border"
                        android:drawablePadding="@dimen/margin_10"
                        android:drawableStart="@drawable/phone"
                        android:hint="9999999999"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:paddingStart="@dimen/margin_10"
                        android:singleLine="true"
                        android:textColorHint="@color/colorblack"
                        android:textSize="@dimen/font_15" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_45"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@drawable/shape_edittext_border"
                        android:drawablePadding="@dimen/margin_10"
                        android:drawableStart="@drawable/password"
                        android:hint="Password"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:paddingStart="@dimen/margin_10"
                        android:singleLine="true"
                        android:textColorHint="@color/colorblack"
                        android:textSize="@dimen/font_15"
                        android:visibility="gone" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_45"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@drawable/shape_edittext_border"
                        android:drawablePadding="@dimen/margin_10"
                        android:drawableStart="@drawable/password"
                        android:hint="Confirm Password"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:paddingStart="@dimen/margin_10"
                        android:singleLine="true"
                        android:textColorHint="@color/colorblack"
                        android:textSize="@dimen/font_15"
                        android:visibility="gone" />

                    <Button
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_30"
                        android:background="@drawable/shape_button_border"
                        android:text="Update"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_18" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>